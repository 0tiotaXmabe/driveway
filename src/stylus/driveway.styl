@import '../../config'
/**
  * driveway
*/


.{$layout}
  box-sizing border-box
  *
    box-sizing border-box
  column-count 1
  @media(min-width: 768px)
    column-count 2
  @media(min-width: 1200px)
    column-count 3
  column-gap 0

  &__{$panelContent}
    padding       10px
    border-radius 10px
    overflow      hidden
    width         100%

    &--{$imagePanel}
      max-width 100%
      padding 0

    &--{$flipper}
      position relative
      overflow visible
      height   100%
      transform-style preserve-3d
      transition .25s

    &--{$flipperFront}
    &--{$flipperBack}
      position absolute
      top      0
      left     0
      overflow hidden
      width    100%
      height   100%
      border-radius 10px
      backface-visibility hidden

    &--{$flipperFront}
      z-index   2
      transform rotateY(0deg)

    &--{$flipperBack}
      transform rotateY(180deg)

  &__{$panel}
    padding $panelGap

    @media(min-width: 768px)
      break-inside avoid

    &--{$flipperContainer}
      perspective 1000
      &:hover
        .{$layout}__{$panelContent}--{$flipper}
          transform rotateY(180deg)

    &--{$small}
      height 200px

    &--{$medium}
      height 300px

    &--{$large}
      height 400px

    @media(max-width: 768px)
      &--{$small}
      &--{$medium}
      &--{$large}
        overflow hidden
        height   auto

    &--{$cluster}
      display        flex
      padding        0
      flex-wrap      wrap
      flex-direction row

    &--{$segment}
      display block
      width   100%
      height  auto
      @media(min-width: 768px)
        flex    1
        display flex

    @media(min-width: 768px)
      &--{$fullSize}
        flex   0 0 100%
        width  100%
        height 100%
      &--{$halfSize}
        flex   0 0 50%
        width  50%
        height 50%
      &--{$quarterSize}
        flex   0 0 25%
        width  25%
        height 25%

    @media(min-width: 768px)
      &--{$verticalFlow}
        flex-direction column
        .{$layout}__{$panel}--{$segment}
          width 50%

      &--{$horizontalFlow}
        .{$layout}__{$panel}--{$segment}
          height 50%
